{# Panel: Testimonial #}

{% extends "content/panels/panel.twig" %}

{% block wrapper_start %}
<div class="l-container {{ text_color }}">
	{% endblock %}

	{% block header %}

		{% if title or description %}
			<header class="s-header s-header--no-padding">

				{{ title }}

				{% block description %}
					{% if description %}
						<div class="s-desc t-content"
						     data-depth="0"
						     data-name="description"
						     data-autop="true"
						     data-livetext>
							{{ description }}
						</div>
					{% endif %}
				{% endblock %}

			</header>
		{% endif %}

	{% endblock %}

	{% block content %}

		{{ image }}

		<div class="s-content">
			<div class="g-row">
				{{ slider }}
			</div>
		</div>

	{% endblock %}
