<article class="item-single">

	<div class="item-single__featured-image">{{ post.featured_image }}</div>

	<div class="l-container__stagger item-single__content">
		<header>
			<h1 class="item-single__headline h1">{{ post.title }}</h1>
			<ul class="item-single__meta">

				{% if post.categories %}
					<li class="item-single__meta__categories">
						<ul class="item-single__meta__categories-list u-sep-slash">
							{% for category in post.categories %}
								<li class="item-single__meta__categories-list-item">
									<a rel="archives" class="item-single__meta__categories__category-link" href="{{ category.permalink }}">
										{{ category.name|esc_html }}
									</a>
								</li>
							{% endfor %}
						</ul>
					</li>
				{% endif %}

				<li class="item-single__meta__date u-fc-nevada">
					<time datetime="{{ post.time['c']|esc_attr }}">
						{{ post.date|esc_html }}
					</time>
				</li>

			</ul>
		</header>
		<div class="t-content">
			{{ post.content }}
		</div>
		<footer class="item-single__footer">

			{{ include( 'components/share.twig' ) }}

		</footer>
	</div>

	{% if related_posts %}
		<section class="item-single__related-posts">
			<hr class="item-single__related-posts__divider">
			<h2 class="item-single__related-posts__section-title h3">{{ __( 'More Posts' )|esc_html }}</h2>
			<div class="item-single__related-posts-wrapper">
				{% for card in related_posts %}
					{{ card }}
				{% endfor %}
			</div>
		</section>
	{% endif %}

</article>
