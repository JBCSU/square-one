{#

Component: Button

Documentation: docs\theme\components\button.md

Controller: wp-content\plugins\core\src\Templates\Components\Button.php
PostCSS: wp-content\plugins\core\assets\theme\pcss\components\_button.pcss

Description: Use this wherever you need a button or link styled as button.

Attributes:
	{
        btn_as_link: true, // true/false. use link tag? Defaults to button
        attrs: 'data-js="nav-trigger" aria-controls="etc"', // string. data atts, aria etc
        classes: 'c-btn--large icon icon-checkmark icon--after', // string. additional classes for the button/link, icon classes etc
		label: 'Click Here', // string. the button text
		target: '_blank' // string. if type is link you can pass in target
		type: 'submit' // string. if tag is button, you can set type
		url: 'http://google.com' // string. if type is link you can set url
		force_display: false // true/false display button if empty
		inner_attributes: 'data-js="nav-trigger" aria-controls="etc"', // string. data atts, aria etc
		aria_label: '' // string. add screen reader text for labels that aren't clear as to where they navigate to.
    }
 #}

<{{ tag }} class="{{ classes }}"
	{% if aria_label %}
	aria-label="{{ aria_label }}"
    {% endif %}
	{% if type %}
	type="{{ type }}"
	{% endif %}
	{% if url %}
	href="{{ url }}"
	{% endif %}
	{% if target %}
	target="{{ target }}"
	{% endif %}
	{{ attrs }}>
	{% if force_display or label is not empty %}
		<span class="c-btn__text" {{ inner_attributes }}>{{ label }}</span>
	{% endif %}
</{{ tag }}>
