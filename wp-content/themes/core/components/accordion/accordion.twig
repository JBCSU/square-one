{# Component: Accordion #}

<div
	{{ container_classes }}
	role="tablist"
	aria-multiselectable="true"
	{{ container_attrs }}
>
	{% for row in rows %}
		<article {{ row_classes }}>
			<button
				aria-controls="{{ row.content_id|esc_attr }}"
				aria-expanded="false"
				aria-selected="false"
				{{ row_header_classes }}
				id="{{ row.header_id|esc_attr }}"
				data-index="{{ loop.index0 }}"
				role="tab"
			>
				<span
					{{ row_header_container_classes }}
					data-depth="0"
					data-name="{{ row_header_name }}"
					data-index="{{ loop.index0 }}"
					data-livetext
				>
					{{ row.header_text }}
				</span>
			</button>
			<div
				aria-hidden="true"
				aria-labelledby="{{ row.header_id|esc_attr }}"
				{{ row_content_classes }}
				id="{{ row.content_id|esc_attr }}"
				role="tabpanel"
			>
				<div
					{{ row_content_container_classes }}
					data-depth="0"
					data-name="{{ row_content_name }}"
					data-index="{{ loop.index0 }}"
					data-autop="true"
					data-livetext
				>
					{{ row.content }}
				</div>
			</div>
		</article>
	{% endfor %}
</div>
