
/* -------------------------------------------------------------------------
 * Heading: H1
 * ------------------------------------------------------------------------- */

.h1,
.t-content h1 {
	@mixin headline-large;

	@media (--viewport-medium) {
		@mixin display-large;
	}
}

h1 {

	.t-content & {
		margin-top: var(--spacer-4);
		margin-bottom: var(--spacer-0);

		@media (--viewport-medium) {
			margin-bottom: var(--spacer-0);
		}
	}
}

