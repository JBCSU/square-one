
/* -------------------------------------------------------------------------
 * Anchor: Defaults
 * ------------------------------------------------------------------------- */

a {
	transition: var(--transition);
	color: inherit;
	text-decoration: none;
	outline: 0;
	cursor: pointer;

	&:visited,
	&:hover {
		color: inherit;
	}

	&:active,
	&:focus {
		outline: 1px dotted;
		color: inherit;
	}
}

/* -------------------------------------------------------------------------
 * Anchor: Full
 * ------------------------------------------------------------------------- */

.anchor,
.t-content a {
	border-bottom: 2px solid var(--color-submarine);
	color: inherit;
	padding-bottom: 3px;
	text-decoration: none;

	&:hover,
	&:focus {
		border-color: var(--color-link-hover);
		color: var(--color-link-hover);
	}
}
