/* -----------------------------------------------------------------------------
 *
 * Panels: Hero
 *
 * ----------------------------------------------------------------------------- */

.site-panel--hero {
	position: relative;

	.t-content h1 {
		margin-top: 0;
	}

	@media (--viewport-medium) {
		min-height: 75vh;
	}
}

/* CASE: Split Right/Left Layout */
.site-panel--hero__layout-content-split-left,
.site-panel--hero__layout-content-split-right {
	@media (--viewport-medium) {

		.c-image__bg {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
		}
	}
}

.hero__image {
	/* CASE: Center/Left BG Image Layout */
	.site-panel--hero__layout-content-left &,
	.site-panel--hero__layout-content-center & {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}

	/* CASE: Split Right/Left Layout */
	.site-panel--hero__layout-content-split-left &,
	.site-panel--hero__layout-content-split-right & {

		&:before {
			content: '';
			position: relative;
			padding-bottom: 85%;
			display: block;
			background: transparent;
		}

		@media (--viewport-full) {

			&:before {
				display: none;
			}
		}
	}
}

.hero__content {
	padding-top: var(--spacer-6);
	padding-bottom: var(--spacer-6);

	/* CASE: Split Right/Left Layout */
	.site-panel--hero__layout-content-split-left &,
	.site-panel--hero__layout-content-split-right & {
		padding-top: var(--spacer-2);
		padding-bottom: var(--spacer-2);

		@media (--viewport-full) {
			padding: var(--spacer-6) 90px;
		}
	}
}
