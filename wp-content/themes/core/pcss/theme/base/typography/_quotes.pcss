
/* -----------------------------------------------------------------------------
 * Global Quotes & Blockquotes
 * ----------------------------------------------------------------------------- */

.blockquote,
blockquote,
.quote,
q {

	.t-content & {
		margin: var(--spacer-xs) auto;

		@media (--viewport-medium) {
			margin-top: var(--spacer);
		}
	}
}

/* -----------------------------------------------------------------------------
 * Quotes
 * ----------------------------------------------------------------------------- */

/* q */
.quote,
.t-content q {
	@mixin quote-base;
	@mixin quote-text;

	display: block;
}

/* -----------------------------------------------------------------------------
 * Blockquotes
 * ----------------------------------------------------------------------------- */

/* blockquote */
.blockquote,
.t-content blockquote {
	@mixin quote-base;

	p {
		@mixin quote-text;

		margin: 0 auto;
		text-align: center;

		& ~ p {
			margin-top: var(--spacer);
		}
	}

	cite {
		color: var(--color-black);

		@media (--viewport-full) {
			text-align: center;
		}
	}
}

/* -----------------------------------------------------------------------------
 * Cite
 * ----------------------------------------------------------------------------- */

/* cite */
.cite,
.t-content cite {
	display: block;
	font-style: normal;
	font-family: var(--font-family-base);
	font-weight: var(--font-weight-light);
	font-size: var(--font-size-overline);
	line-height: var(--line-height-overline);
	margin-top: var(--spacer);
	text-align: center;
	text-transform: uppercase;
}
