
/* -----------------------------------------------------------------------------
 * Table
 * ----------------------------------------------------------------------------- */

.table,
.t-content table {
	font-size: var(--font-size-body);
	line-height: var(--line-height-body);
	color: var(--sq1-color-mine-shaft);
	margin: var(--spacer) auto;
	text-align: left;
	border-collapse: collapse;
	border: 0;
	width: 100%;
	table-layout: fixed;

	@media (--viewport-medium) {
		table-layout: auto;
	}
}

/* -----------------------------------------------------------------------------
 * TH
 * ----------------------------------------------------------------------------- */

.th,
.t-content th {
	color: var(--sq1-color-mine-shaft);
	padding: 14px 1em 12px;
	font-family: var(--font-calibre);
	font-weight: var(--font-weight-semibold);
	line-height: var(--line-height-sub-header);
	font-size: var(--font-size-sub-header);

	~ th {
		border: 0;
	}
}

/* -----------------------------------------------------------------------------
 * TR
 * ----------------------------------------------------------------------------- */

.tr,
.t-content tbody tr {

	& ~ tr {
		border: 0;
	}

	&:nth-of-type(odd) {
		background-color: var(--sq1-color-desert-storm);
	}
}

/* -----------------------------------------------------------------------------
 * TD
 * ----------------------------------------------------------------------------- */

.td,
.t-content td {
	padding: 16px 24px;

	& ~ td {
		border: 0;
	}
}
