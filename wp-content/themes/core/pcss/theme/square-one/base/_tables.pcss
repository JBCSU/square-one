
/* -----------------------------------------------------------------------------
 * Table
 * ----------------------------------------------------------------------------- */

.table,
.t-content table {
	color: var(--sq1-color-mine-shaft);
}

/* -----------------------------------------------------------------------------
 * TH
 * ----------------------------------------------------------------------------- */

.th,
.t-content th {
	color: var(--sq1-color-mine-shaft);
	font-family: var(--font-calibre);
}

/* -----------------------------------------------------------------------------
 * TR
 * ----------------------------------------------------------------------------- */

.tr,
.t-content tbody tr {

	&:nth-of-type(odd) {
		background-color: var(--sq1-color-desert-storm);
	}
}
