:root {
	/* -----------------------------------------------------------------------------
	 * Primary Palette
	 * ----------------------------------------------------------------------------- */

	--color-primary: #4a7ef2;
	--color-secondary: #3c73ef;
	--color-tertiary: #3b4664;
	--color-hover: #3463cc;
	--color-blue: #4a7ef2;
	--color-blue-grey: #8a9fcd;
	--color-blue-sky: #bdd1ff;
	--color-blue-purple: #3b4664;
	--color-blue-dark: #3c4465;
	--color-blue-soft: #7da6f6;
	--color-blue-purple-soft: #66718f;

	/* -----------------------------------------------------------------------------
	 * Whites
	 * ----------------------------------------------------------------------------- */

	--color-white: #fff;
	--color-white-ivory: #fafbfd;

	/* -----------------------------------------------------------------------------
	 * Only Shades of Grey
	 * ----------------------------------------------------------------------------- */

	--color-grey-light: #e9edf2;
	--color-grey-lighter: #e9edf1;
	--color-grey-lightest: #e0e0e1;
	--color-grey-tomestone: #e8e8e9;
	--color-grey: #78787e;
	--color-grey-medium: #c1c4c9;
	--color-grey-dark: #48484e;
	--color-grey-overcast: #bbbbbe;

	/* -----------------------------------------------------------------------------
	 * Blacks
	 * ----------------------------------------------------------------------------- */

	--color-black: #000;
	--color-black-midnight: #363a43;
	--color-black-a-0: rgba(0, 0, 0, 0);
	--color-black-a-10: rgba(0, 0, 0, 0.1);
	--color-black-a-20: rgba(0, 0, 0, 0.2);
	--color-black-a-30: rgba(0, 0, 0, 0.3);
	--color-black-a-40: rgba(0, 0, 0, 0.4);
	--color-black-a-50: rgba(0, 0, 0, 0.5);
	--color-black-a-60: rgba(0, 0, 0, 0.6);
	--color-black-a-65: rgba(0, 0, 0, 0.65);
	--color-black-a-70: rgba(0, 0, 0, 0.7);
	--color-black-a-80: rgba(0, 0, 0, 0.8);

	/* -----------------------------------------------------------------------------
	 * Brand
	 * ----------------------------------------------------------------------------- */

	--color-logo: #4a7ef2;
	--colorlogo-darker: #293141;
	--color-darker-blue: #252933;
	--color-darkest-blue: #21242a;

	/* -----------------------------------------------------------------------------
	 * Purple
	 * ----------------------------------------------------------------------------- */

	--color-purple-periwinkle: #dee8ff;

	/* -----------------------------------------------------------------------------
	 * Backgrounds
	 * ----------------------------------------------------------------------------- */

	--color-bgd: var(--color-white);
	--color-bgd-content: var(--color-white);
	--color-bgd-login: #f1f1f1;

	/* -----------------------------------------------------------------------------
	 * Links
	 * ----------------------------------------------------------------------------- */

	--color-link: var(--color-primary);
	--color-link-hover: var(--color-hover);

	/* -----------------------------------------------------------------------------
	 * Text
	 * ----------------------------------------------------------------------------- */

	--color-text: var(--color-grey-dark);

	/* -----------------------------------------------------------------------------
	 * Borders
	 * ----------------------------------------------------------------------------- */

	--color-border: var(--color-grey-overcast);
	--color-table-border: #e0e1e4;
}
