
/* -----------------------------------------------------------------------------
 *
 * Button Global Reset
 *
 * ----------------------------------------------------------------------------- */

@define-mixin button-global {
	border: 0;
	cursor: pointer;
	display: inline-block;
	height: auto;
	padding: 0;
	text-decoration: none;
	width: auto;
}

/* -----------------------------------------------------------------------------
 * Button - Base
 * ----------------------------------------------------------------------------- */

@define-mixin button-base {
	font-family: var(--font-family-calibre);
	font-size: var(--font-size-2);
	font-weight: var(--font-weight-medium);
	line-height: var(--line-height-even);
	letter-spacing: 0.3px;
	text-align: center;
	transition: var(--transition);

	&[disabled] {
		cursor: not-allowed;
	}

	@media (--viewport-medium) {
		font-size: var(--font-size-3);
		line-height: var(--line-height-3);
	}
}

/* -----------------------------------------------------------------------------
 * Button - Solid
 * ----------------------------------------------------------------------------- */

@define-mixin button-solid {
	background-color: var(--color-mine-shaft);
	color: var(--color-white);
	padding: var(--spacer-1) 24px;
	display: inline-block;

	&:visited {
		color: var(--color-white);
	}

	&:hover,
	&:focus,
	&:active {
		background-color: var(--color-link-hover);
		color: var(--color-white);
	}
}

/* -----------------------------------------------------------------------------
 *
 * Button Submit
 *
 * ----------------------------------------------------------------------------- */

@define-mixin button-submit {
	@mixin button-global;
	@mixin button-base;
	@mixin button-solid;
}
