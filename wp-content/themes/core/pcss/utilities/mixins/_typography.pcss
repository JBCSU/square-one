
/* -----------------------------------------------------------------------------
 *
 * Icons
 *
 * ----------------------------------------------------------------------------- */

@define-mixin icon {
	font-family: var(--font-family-core-icons);
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	text-rendering: auto;
}

/* -------------------------------------------------------------------------
 *
 * Body Content
 *
 * ------------------------------------------------------------------------- */

@define-mixin body-content {
	font-family: var(--font-family-tiempos);
	line-height: var(--line-height-base);
	font-size: var(--font-size-body-s);

	@media (--viewport-medium) {
		font-size: var(--font-size-body);
	}
}

@define-mixin body-content-large {
	line-height: var(--line-height-xl);
	font-size: var(--font-size-body);

	@media (--viewport-medium) {
		font-size: var(--font-size-body-l);
	}
}

/* -----------------------------------------------------------------------------
 *
 * Quotes & Blockquotes
 *
 * ----------------------------------------------------------------------------- */

@define-mixin quote-base {
	max-width: 800px;
	padding: var(--spacer-2);
}

@define-mixin quote-text {
	font-family: var(--font-family-calibre);
	font-size: 32px;
	line-height: 1.222;
	font-style: normal;
	font-weight: var(--font-weight-semibold);
	text-align: center;

	@media (--viewport-medium) {
		font-size: 36px;
	}
}

/* -----------------------------------------------------------------------------
 *
 * Typescale:
 * 	- Display Large
 * 	- Display
 * 	- Headline Large
 * 	- Headline
 * 	- Title Large
 * 	- Title
 * 	- Subheader Large
 * 	- Subheader
 * 	- Overline
 *
 * ----------------------------------------------------------------------------- */

@define-mixin display-large {
	font-family: var(--font-family-calibre);
	font-size: 64px;
	line-height: 1.156;
	font-weight: var(--font-weight-semibold);
	letter-spacing: -0.9px;
}

@define-mixin display {
	font-family: var(--font-family-calibre);
	font-size: 48px;
	line-height: 1.667;
	font-weight: var(--font-weight-semibold);
	letter-spacing: -0.3px;
}

@define-mixin headline-large {
	font-family: var(--font-family-calibre);
	font-size: 40px;
	line-height: 1.2;
	font-weight: var(--font-weight-semibold);
	letter-spacing: -0.2px;
}

@define-mixin headline {
	font-family: var(--font-family-calibre);
	font-size: 32px;
	line-height: 1.3125;
	font-weight: var(--font-weight-semibold);
	letter-spacing: -0.1px;
}

@define-mixin title-large {
	font-family: var(--font-family-calibre);
	font-size: 28px;
	line-height: 1.357;
	font-weight: var(--font-weight-semibold);
}

@define-mixin title {
	font-family: var(--font-family-calibre);
	font-size: 24px;
	line-height: 1.333;
	font-weight: var(--font-weight-semibold);
}

@define-mixin subheader-large {
	font-family: var(--font-family-calibre);
	font-size: 22px;
	line-height: 1.45;
	font-weight: var(--font-weight-semibold);
	letter-spacing: 0.11px;
}

@define-mixin subheader {
	font-family: var(--font-family-calibre);
	font-size: 20px;
	line-height: 1.4;
	font-weight: var(--font-weight-semibold);
	letter-spacing: 0.11px;
}

@define-mixin overline {
	font-family: var(--font-family-calibre);
	font-size: 14px;
	font-weight: var(--font-weight-regular);
	line-height: var(--line-height-base);
	letter-spacing: 1.75px;
	text-transform: uppercase;
}
