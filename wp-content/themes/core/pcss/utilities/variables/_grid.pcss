/* -----------------------------------------------------------------------------
 * Grid Variables
 * ----------------------------------------------------------------------------- */

:root {
	--grid-gutter: 30px;
	--grid-gutter-half: calc(var(--grid-gutter) / 2);
	--grid-gutter-small: 20px;
	--grid-gutter-small-half: calc(var(--grid-gutter-small) / 2);
	--grid-width: calc(1200px + var(--grid-gutter) * 2);
}
