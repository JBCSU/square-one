:root {
	/* -----------------------------------------------------------------------------
	 * Primary Palette
	 * ----------------------------------------------------------------------------- */

	--color-java: #1ca8c7;
	--color-pickled-bluewood: #2b474f;
	--color-matisse: #1a7f9d;
	--color-gossamer: #078e87;
	--color-mandy: #e4554a;
	--color-casablanca: #f4af49;
	--color-saffron-mango: #f8ce4d;

	/* Global Color Vars */
	--color-primary: var(--color-java);
	--color-secondary: var(--color-pickled-bluewood);

	/* -----------------------------------------------------------------------------
	 * Whites
	 * ----------------------------------------------------------------------------- */

	--color-white: #fff;
	--color-off-white: #fcfcfc;

	/* -----------------------------------------------------------------------------
	 * Greys
	 * ----------------------------------------------------------------------------- */

	--color-grey-light: lighten(var(--color-grey), 0.15);
	--color-grey: grey;
	--color-grey-dark: darken(var(--color-grey), 0.15);
	--color-mine-shaft: #222;
	--color-outer-space: #323738;
	--color-nevada: #606a6b;
	--color-submarine: #b9c2c3;
	--color-desert-storm: #f2f1f0;
	--color-goethite: #222222;

	/* -----------------------------------------------------------------------------
	 * Blacks
	 * ----------------------------------------------------------------------------- */

	--color-black: #000;
	--color-black-a-60: rgba(0, 0, 0, 0.6);
	--color-black-a-40: rgba(0, 0, 0, 0.4);
	--color-black-a-30: rgba(0, 0, 0, 0.3);
	--color-black-pearl: #080414;

	/* -----------------------------------------------------------------------------
	 * Backgrounds
	 * ----------------------------------------------------------------------------- */

	--color-bgd: var(--color-white);
	--color-bgd-content: var(--color-white);
	--color-bgd-login: #f1f1f1;
	--color-bgd-selection: var(--color-primary);

	/* -----------------------------------------------------------------------------
	 * Links
	 * ----------------------------------------------------------------------------- */

	--color-link: var(--color-primary);
	--color-link-hover: var(--color-matisse);

	/* -----------------------------------------------------------------------------
	 * Text
	 * ----------------------------------------------------------------------------- */

	--color-text: var(--color-mine-shaft);
	--color-text-selection: var(--color-text);

	/* -----------------------------------------------------------------------------
	 * Borders
	 * ----------------------------------------------------------------------------- */

	--color-border: var(--color-submarine);
	--color-table-border: #e0e1e4;

	/* -----------------------------------------------------------------------------
	 * Accordion
	 * ----------------------------------------------------------------------------- */

	--color-accordion-border: darken(var(--color-white), 0.08);

	/* -----------------------------------------------------------------------------
	 * Tabs
	 * ----------------------------------------------------------------------------- */

	--color-tabs-border: darken(var(--color-white), 0.08);
	--color-tabs-btn-bg: darken(var(--color-white), 0.05);

	/* -----------------------------------------------------------------------------
	 * Media: WP Oembed
	 * ----------------------------------------------------------------------------- */

	--wp-oembed-bgd: var(--color-grey);

	/* -----------------------------------------------------------------------------
	 * Social
	 * ----------------------------------------------------------------------------- */

	--color-facebook: #3b5998;
	--color-google-plus: #d34836;
	--color-linkedin: #0077b5;
	--color-outlook: #0072c6;
	--color-pinterest: #bd081c;
	--color-twitter: #0084b4;
}
